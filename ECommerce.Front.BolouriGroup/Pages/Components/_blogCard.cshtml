@model Ecommerce.Entities.ViewModel.BlogViewModel

<div class="blog-card">
    <div class="blog-media">
        <a class="blog-img" asp-area="" asp-page="/BlogDetails" asp-route-blogUrl="@Model.Url">
            <img src="~/@($"{Model.Image?.Path}/{Model.Image?.Name}")" alt="@Model.Image?.Alt" width="330">
        </a>
    </div>
    <div class="blog-content">
        <ul class="blog-meta">
            <li><i class="far fa-calendar"></i><span> <a asp-area="" asp-page="Blog">@Model.EditDateTime.ToFa("f")</a> </span></li>
            <li><i class="far fa-user"></i><span> <a asp-area="" asp-page="Blog">@($"توسط {Model.BlogAuthor?.Name}")</a> </span></li>
            <li><i class="far fa-comments"></i><span>@Model.CommentCount نظر</span></li>
        </ul>
        <strong class="blog-title"><a asp-page="/BlogDetails" asp-route-blogUrl="@Model.Url" asp-page="Blog"> @Model.Title</a></strong>
        @{
            int positionOfNewLine = Model.Text.IndexOf("\r\n");
        }
        @if (positionOfNewLine == -1)
        {
            <b asp-area="" class="blog-desc" asp-page="Blog">@Html.Raw(Model.Text)...</b>

        }
        else
        {
            <b asp-area="" class="blog-desc" asp-page="Blog">@Html.Raw(Model.Text.Substring(0,positionOfNewLine))...</b>

        }

        <a class="blog-btn" asp-area="" asp-page="/BlogDetails" asp-route-blogUrl="@Model.Url"><span> ادامه مطلب </span><i class="far fa-long-arrow-left"></i></a>
    </div>
</div>