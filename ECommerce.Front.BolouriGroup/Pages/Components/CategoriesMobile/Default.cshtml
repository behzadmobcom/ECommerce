@model List<Ecommerce.Entities.ViewModel.CategoryParentViewModel>

@if (Model != null)
{
    var path = "/Shop/";
    @foreach (var parentCategory in Model)
    {
        <a class="nav-link dropdown-link" style="cursor: pointer;" id="@parentCategory.Id">@parentCategory.Name</a>
        <ul class="dropdown-list">
            @foreach (var firstChild in parentCategory.Children)
            {
                var firstPath = path + firstChild.Path;
                <li>
                    <a href="@firstPath" onclick="categoryChangeHandler(event)">@firstChild.Name</a>
                </li>
                <ul>
                    @foreach (var secondChild in firstChild.Children)
                    {
                        var secondPath = path + secondChild.Path;
                        <li>
                            <a style="font-size: 12px; color: gray" href="@secondPath" onclick="categoryChangeHandler(event)">
                                @secondChild.Name
                            </a>
                        </li>
                    }
                </ul>
            }
        </ul>
    }
}