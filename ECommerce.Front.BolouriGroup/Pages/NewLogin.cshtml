@page "/NewLogin"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ECommerce.Front.BolouriGroup.Pages.NewLoginModel
@{
    ViewData["Title"] = "ورود";
}
@section Head
    {
    <style>
        .section1 {
            z-index: 3;
            text-align: center;
        }

            .section1 > h1,
            .section2 > h2 {
                text-transform: uppercase;
                margin-top: 30px;
                color: #0d47a1;
            }

        .section2 {
            z-index: 2;
        }

        .section3 {
            z-index: 2;
        }

        .maini {
            width: 300px;
            height: 350px;
            padding: 10px 15px;
            border-radius: 5px;
            margin-bottom: 300px
        }

            .maini .section {
                width: 100%;
                height: 100%;
                position: absolute;
            }

        .user-form-title > h1 {
            font-size: 1.9rem;
            font-weight: 700;
            line-height: 2.12;
            text-align: right;
        }

        .user-form-title > h2 {
            font-size: 1.9rem;
            font-weight: 700;
            line-height: 2.12;
            text-align: right;
        }

        .user-form-title > p {
            font-size: 1.2rem;
            font-weight: 400;
            line-height: 2.17;
            text-align: right;
        }

        .form-button > p {
            font-size: 1.2rem;
            font-weight: 400;
            line-height: 2.17;
            text-align: center;
        }

        .form-button > a {
            color: #008eb2;
            display: inline-block
        }
    </style>

}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="maini">
    <section class="user-form-part section section1" id="section1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-5">
                    <div class="user-form-card">
                        <div class="user-form-logo">
                            <a asp-area="" asp-page="/Index">
                                <img src="~/img/logo.png" alt="لوگو" width="250" height="117" loding="lazy">
                            </a>
                        </div>
                        <div class="user-form-title">
                            <h1>ورود | ثبت‌نام</h1>
                            <p>سلام!</p>
                            <p class="lign-right">لطفا شماره موبایل خود را وارد کنید</p>
                        </div>
                        <form method="post" class="user-form">
                            <div class="form-group">
                                <p class="alert"></p>
                                <input id="userName" type="text" asp-for="LoginViewModel.Username" class="form-control" placeholder="شماره موبایل  خود را وارد کنید">
                            </div>

                            <div class="form-button">
                                <button type="button" onclick="sectionOne()">ورود</button>
                                <p>ورود شما به معنای پذیرش<a asp-area="" asp-page="/Rules">قوانین بلوری </a>است</p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="user-form-part section section2" id="section2">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-5">
                    <div class="user-form-card">
                        <div class="user-form-logo row">
                            <div class="col-md-1">
                                <a onclick="history.back()">
                                    <img src="~/img/arrow-icon.png" width="25" height="25" loding="lazy" style="width: 25px">
                                </a>
                            </div>
                            <div class="col-md-10">
                                <a asp-area="" asp-page="/Index">
                                    <img src="~/img/logo.png" alt="لوگو" width="250" height="117" loding="lazy">
                                </a>
                            </div>
                        </div>
                        <div class="user-form-title">
                            <h2>کد تایید را وارد کنید</h2>
                            <p>سلام!</p>
                            <p class="lign-right">
                                حساب کاربری با شماره موبایل
                                <span id="MobileList"></span>
                                وجود ندارد. برای ساخت حساب جدید،کد تایید برای این شماره ارسال گردید.
                            </p>
                        </div>
                        <form method="post" class="user-form">
                            <div class="form-group">
                                <p class="alert"></p>
                                <input id="Mobile" type="text" asp-for="LoginViewModel.Username" class="form-control">
                            </div>

                            <div class="form-button">
                                <button type="submit" asp-page-handler="Submit" onclick="sectionTwo()">ادامه</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="user-form-part section section3" id="section3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-5">
                    <div class="user-form-card">
                        <div class="user-form-logo row">
                            <div class="col-md-1">
                                <a onclick="history.back()">
                                    <img src="~/img/arrow-icon.png" width="25" height="25" loding="lazy" style="width: 25px">
                                </a>
                            </div>
                            <div class="col-md-10">
                                <a asp-area="" asp-page="/Index">
                                    <img src="~/img/logo.png" alt="لوگو" width="250" height="117" loding="lazy">
                                </a>
                            </div>
                        </div>
                        <div class="user-form-title">
                            <h2>رمز عبور را وارد کنید</h2>
                            <form method="post" class="user-form">
                                <div class="input-group" id="show_hide_password">
                                    <input class="form-control" type="password" asp-for="LoginViewModel.Password">
                                    <div class="input-group-addon">
                                        <a href="" style="color: #0d6efd"><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                    </div>
                                </div>
                                <button type="submit" asp-page-handler="Submit" style="margin-top:20px ">ارسال کد یک بار مصرف</button>
                                <div class="form-button">
                                    <button type="submit" asp-page-handler="Submit" onclick="sectionThree()">ادامه</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div><!----maini close--->
@section Scripts
    {
    <script>
        var mobileNumber = "";

        function sectionOne() {
            $("#section1").css("display", "none");
            $("#section2").css("display", "block");
            $("#section3").css("display", "none");
            mobileNumber = $("#userName").val();
            $("#MobileList").text(mobileNumber);
        }

        function sectionTwo() {
            alert("asd");
            $("#section1").css("display", "block");
            $("#section2").css("display", "none");
            $("#section3").css("display", "none");
        }

    </script>
}
