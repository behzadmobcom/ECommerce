@page "{**path}"
@model Bolouri.Pages.ShopModel
@{
}

<section class="inner-section single-banner">
    <div class="container">
        <h2>لیست کالا</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="" asp-page="/Index">خانه</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">لیست کالا</li>
        </ol>
    </div>
</section>


<section class="inner-section shop-part">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-1 order-lg-0">
                <div class="shop-widget">
                    <h6 class="shop-widget-title">دسته بندی</h6>
                    @await Component.InvokeAsync("CategoriesList")
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">حدود قیمت</h6>
                    <input type="text" id="amount" readonly="">
                    <div id="slider-range"></div>
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">رتبه بندی</h6>
                    <ul class="shop-widget-list">
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="feat1">
                                    <label class="form-check-label" for="feat1">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                    </label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(50)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="feat2">
                                    <label class="form-check-label" for="feat2">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                                    </label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(25)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="feat3">
                                    <label class="form-check-label" for="feat3">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                    </label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(13)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="feat4">
                                    <label class="form-check-label" for="feat4">
                                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                    </label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(15)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="feat5">
                                    <label class="form-check-label" for="feat5">
                                        <i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                    </label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(02)</span>
                        </li>
                    </ul>
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">برچسب ها</h6>
                    <ul class="shop-widget-list">
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="tag1">
                                    <label class="form-check-label" for="tag1">موارد جدید</label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(13)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="tag2">
                                    <label class="form-check-label" for="tag2">موارد فروشی</label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(15)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="tag3">
                                    <label class="form-check-label" for="tag3">موارد خاص</label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(19)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="tag4">
                                    <label class="form-check-label" for="tag4">پرطرفدار</label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(20)</span>
                        </li>
                        <li>
                            <div class="shop-widget-content">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="tag5">
                                    <label class="form-check-label" for="tag5">موارد تخفیف</label>
                                </div>
                            </div>
                            <span class="shop-widget-number">(25)</span>
                        </li>
                    </ul>
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">مارک های تجاری</h6>
                    <ul class="shop-widget-list shop-widget-scroll">
                        @foreach (var brand  in Model.Brands)
                        {
                            <li>
                                <div class="shop-widget-content">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="brand_@brand.Key">
                                        <label class="form-check-label" for="brand_@brand.Key">@brand.Value</label>
                                    </div>
                                </div>
                            </li>
                        }


                    </ul>
                </div>
            </div>
            <div class="col-lg-9 order-0 order-lg-1">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="shop-filter">
                            @{
                                var startNumber = (Model.Products.PaginationDetails.CurrentPage - 1) * Model.Products.PaginationDetails.PageSize + 1;
                                var endNumber = Model.Products.PaginationDetails.CurrentPage * Model.Products.PaginationDetails.PageSize;
                                var total = Model.Products.PaginationDetails.TotalCount;
                                if (endNumber > total) endNumber = total;
                            }
                            <p>نمایش @startNumber - @endNumber از @total نتیجه</p>

                            <a asp-page="/Shop" asp-route-productSort="1">مرتب سازی بر اساس جدیدترین</a>
                            <a asp-page="/Shop" asp-route-productSort="2">مرتب سازی بر اساس پرطرفدارها</a>
                            <a asp-page="/Shop" asp-route-productSort="3">قیمت پایین به بالا</a>
                            <a asp-page="/Shop" asp-route-productSort="4">قیمت بالا به پایین</a>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4">
                    @if (Model.Products != null)
                    {
                        foreach (var product in Model.Products.ReturnData)
                        {
                            <partial name="Components/_productCard" model="product"/>
                        }
                    }

                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <partial name="_Pagination" model="@Model.Products.PaginationDetails"/>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>