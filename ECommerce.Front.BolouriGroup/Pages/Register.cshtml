@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ECommerce.Front.BolouriGroup.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<section class="user-form-part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-5">
                <div class="user-form-logo">
                    <a asp-area="" asp-page="/Index">
                        <img src="~/img/logo.png" alt="لوگو">
                    </a>
                </div>
                <div class="user-form-card">
                    <div class="user-form-title">
                        <h2>ایجاد حساب!</h2>
                        <p>حساب خود را به صورت رایگان ثبت کنید</p>
                    </div>
                    <form method="post" asp-page-handler="Register" class="user-form">
                        <h6 class="widget-title border-left mb-40">مشتریان جدید</h6>

                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <input type="text" placeholder="نام" asp-for="RegisterViewModel.FirstName" class="form-control">
                                <span asp-validation-for="RegisterViewModel.FirstName"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <input type="text" placeholder="نام خانوادگی" asp-for="RegisterViewModel.LastName" class="form-control">
                                <span asp-validation-for="RegisterViewModel.LastName"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <span asp-validation-for="RegisterViewModel.Mobile" style="color: red"></span>
                                <input type="text" placeholder="شماره همراه" dir="ltr" asp-for="RegisterViewModel.Mobile" class="form-control">
                            </div>
                            <div class="col-sm-6 form-group">
                                <span asp-validation-for="RegisterViewModel.Name"></span>
                                <input type="text" placeholder="نام شرکت" asp-for="RegisterViewModel.Name" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span asp-validation-for="RegisterViewModel.Email" style="color: red"></span>
                            <input type="text" placeholder="آدرس ایمیل" dir="ltr" asp-for="RegisterViewModel.Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="RegisterViewModel.NationalCode" style="color: red"></span>
                            <input type="text" placeholder="کد ملی" dir="ltr" asp-for="RegisterViewModel.NationalCode" class="form-control">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="RegisterViewModel.Username" style="color: red"></span>
                            <input type="text" placeholder="نام کاربری" dir="ltr" asp-for="RegisterViewModel.Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="RegisterViewModel.Password" style="color: red"></span>
                            <input type="password" placeholder="رمز عبور" dir="ltr" asp-for="RegisterViewModel.Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="RegisterViewModel.ConfirmPassword" style="color: red"></span>
                            <input type="password" placeholder="تکرار رمز عبور" dir="ltr" asp-for="RegisterViewModel.ConfirmPassword" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>
                                <small style="font-size: 12px">
                                    <input type="checkbox" name="signup" asp-for="RegisterViewModel.IsHaveCustomerCode"
                                           style=" width: 18px; height: 18px; visibility: inherit; position: sticky;margin-right: -1.5em">
                                    آیا شما در قبلا در سیستم حسابداری این شرکت ثبت شده اید؟

                                    <span asp-validation-for="RegisterViewModel.IsHaveCustomerCode"></span>
                                </small>
                            </label>
                            <input placeholder="در صورت داشتن کد مشتری در فاکتورهای قبلی، وارد کنید." dir="ltr" asp-for="RegisterViewModel.CustomerCodeCustomer" class="form-control" />
                            <span asp-validation-for="RegisterViewModel.CustomerCodeCustomer"></span><br />
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" value="" id="agree"
                                   style=" width: 18px; height: 18px; visibility: inherit;position: sticky">
                            <label class="form-check-label" for="agree">
                                با <a href="#" data-toggle="modal" data-target="#roleModal">قوانین و مقررات</a> موافقم.
                            </label>
                        </div>
                        <div class="form-button">
                            <button type="submit">ایجاد حساب کاربری</button>
                            <p>قبلاً حساب دارید؟ <a asp-area="" asp-page="/Login">ورود.</a></p>
                        </div>
                    </form>

                </div>
                <div class="user-form-footer">
                    <p> &copy; 2021 - Boloori - <a asp-area="" asp-page="/Privacy">Privacy</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

