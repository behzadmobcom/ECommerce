@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.Brands.DetailModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        جزئیات برند
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام:</label>
                            <label class="form-control form-control-solid">@Model.Brand.Name</label>
                        </div>
                        <div class="form-group">
                            <label>آدرس اینترنتی:</label>
                            <label class="form-control form-control-solid">@Model.Brand.Name</label>
                        </div>
                        <div class="form-group">
                            <label>توضیحات:</label>
                            <label class="form-control form-control-solid" style="height: auto">@Html.Raw(Model.Brand.Description)</label>
                        </div>
                        <div class="form-group">
                            <label>تصویر برند:</label>
                            <img src="@Model.Brand.ImagePath" style="width: 200px">
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary mr-2" asp-Page="/brands/edit" asp-area="Admin" asp-route-id="@Model.Brand.Id">ویرایش</a>
                        <a class="btn btn-secondary" asp-Page="/brands/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>