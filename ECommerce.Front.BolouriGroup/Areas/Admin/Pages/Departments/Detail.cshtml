@page
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.Departments.DetailModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        جزئیات دپارتمان
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>عنوان:</label>
                            <label class="form-control form-control-solid">@Model.Department.Title</label>
                        </div>
                        <div class="form-group">
                            <label>مکان:</label>
                            <label class="form-control form-control-solid">@Model.Department.Location</label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary mr-2" asp-Page="/Departments/edit" asp-area="Admin" asp-route-id="@Model.Department.Id">ویرایش</a>
                        <a class="btn btn-secondary" asp-Page="/Departments/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>