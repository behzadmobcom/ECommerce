@page "/Admin/DetailCity/{handler?}"
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.Cities.DetailModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        جزئیات شهر
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" asp-for="@Model.City.Id" />
                    <div class="card-body">
                        <div class="form-group">
                            <label>استان:</label>
                            <label class="form-control form-control-solid">@Model.StateName</label>
                        </div>
                        <div class="form-group">
                            <label>نام:</label>
                            <label class="form-control form-control-solid">@Model.City.Name</label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary mr-2" asp-Page="/Cities/edit" asp-area="Admin" asp-route-id="@Model.City.Id">ویرایش</a>
                        <a class="btn btn-secondary" asp-Page="/Cities/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>