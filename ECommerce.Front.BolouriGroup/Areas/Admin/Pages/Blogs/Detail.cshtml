@page
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.Blogs.DetailModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        جزئیات مقاله
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>عنوان</label>
                            <label  class="form-control form-control-solid">@Model.Blog.Title</label>
                        </div>
                        <div class="form-group">
                            <label>متن مقاله</label>
                            <label id="Description_Edit" style="height:auto" class="form-control form-control-solid"> 
                                @Html.Raw(Model.Blog.Text)</label>
                        </div>

                        <div class="form-group">
                            <label>خلاصه</label>
                            <label  class="form-control form-control-solid"> @Html.Raw(Model.Blog.Summary)</label>
                        </div>
                   
                      
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary mr-2" asp-Page="/blogs/edit" asp-area="Admin" asp-route-id="@Model.Blog.Id">ویرایش</a>
                        <a class="btn btn-secondary" asp-Page="/blogs/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>