@page "/Admin/DeleteSlideShow"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.SlideShows.DeleteModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        حذف اسلاید شو
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" name="id" asp-for="@Model.SlideShow.Id"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label>عنوان</label>
                            <label class="form-control form-control-solid">@Model.SlideShow.Title</label>
                        </div>
                        <div class="form-group">
                            <label>توضیحات</label>
                            <label class="form-control form-control-solid" rows="3">@Html.Raw(Model.SlideShow.Description)</label>
                        </div>
                        <div class="form-group">
                            <label>ترتیب نمایش</label>
                            <label class="form-control form-control-solid">@Model.SlideShow.DisplayOrder</label>
                        </div>
                        <div class="form-group">
                            <label>تصویر اسلاید شو</label>
                            <img style="width: 50%" src="@Model.SlideShow.ImagePath">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">حذف</button>
                        <a class="btn btn-secondary" asp-Page="/SlideShows/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>