@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Entities.ViewModel.CategoryParentViewModel>

@foreach (var category in Model)
{
    var spcae = "";
    for (var i = 0; i < category.Depth; i++)
    {
        spcae += "---";
    }

    if (!category.Children.Any())
    {
        <br>
        @spcae
        <input type="radio" id="@category.Id" name="SlideShow.CategoryId" value="@category.Id">
        <label for="@category.Id">@category.Name</label>
        <input hidden="hidden" id="path_@category.Id" value="@category.Path"/>
    }
    else
    {
        <br>
        @spcae
        <input type="radio" id="@category.Id" name="SlideShow.CategoryId" value="@category.Id">
        <label for="@category.Id">@category.Name</label>
        <input hidden="hidden" id="path_@category.Id" value="@category.Path"/>
        <partial name="_ParentCategory" model="@category.Children"/>
    }
}