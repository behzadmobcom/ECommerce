@page "/Admin/EditSlideShow/{handler?}"
@model Bolouri.Areas.Admin.Pages.SlideShows.EditModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        ویرایش اسلاید شو
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost" enctype="multipart/form-data">
                    <input hidden="hidden" asp-for="@Model.SlideShow.Id"/>
                    <input hidden="hidden" asp-for="@Model.SlideShow.ImagePath"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label>عنوان</label>
                            <input asp-for="@Model.SlideShow.Title" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.SlideShow.Title" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>توضیحات</label>
                            <textarea  id="Description_Edit" asp-for="@Model.SlideShow.Description" class="form-control form-control-solid" rows="6"></textarea>
                            <span asp-validation-for="@Model.SlideShow.Description" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>ترتیب نمایش</label>
                            <input id="kt_touchspin_4" asp-for="@Model.SlideShow.DisplayOrder" class="form-control form-control-solid bootstrap-touchspin-vertical-btn"/>
                        </div>
                        <div class="form-group">
                            <label>تصویر اسلاید شو</label> <img style="width: 50%" src="@Model.SlideShow.ImagePath">
                            <div class="custom-file">
                                <input asp-for="Upload" type="file" class="custom-file-input" id="customفایل"/>
                                <label class="custom-file-label" for="customفایل">انتخاب فایل</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">ویرایش</button>
                        <a class="btn btn-secondary" asp-Page="/SlideShows/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="/Admin/js/bootstrap-touchspin.js"></script>
<script src="~/Admin/js/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        window.onload = function() {
            CKEDITOR.replace('Description_Edit');
        };
    </script>


}