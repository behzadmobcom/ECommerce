@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.SlideShows.DetailModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        جزئیات اسلاید شو
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>عنوان:</label>
                            <label class="form-control form-control-solid">@Model.SlideShow.Title</label>
                        </div>
                        <div class="form-group">
                            <label>توضیحات:</label>
                            <label class="form-control form-control-solid" style="height: auto">@Html.Raw(Model.SlideShow.Description)</label>
                        </div>
                        <div class="form-group">
                            <label>ترتیب نمایش</label>
                            <label class="form-control form-control-solid">@Model.SlideShow.DisplayOrder</label>
                        </div>
                        <div class="form-group">
                            <label>تصویر اسلاید شو:</label>
                            <img style="width: 50%" src="@Model.SlideShow.ImagePath">
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary mr-2" asp-Page="/SlideShows/edit" asp-area="Admin" asp-route-id="@Model.SlideShow.Id">ویرایش</a>
                        <a class="btn btn-secondary" asp-Page="/SlideShows/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>