@page "/Admin/Transactions/{handler?}"
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.TransactionsModel
@{
    ViewData["Title"] = "واریزی ها";
    var i = 1 + (Model.Transactions.PaginationDetails.CurrentPage - 1) * Model.Transactions.PaginationDetails.PageSize;
}
div class="card card-custom gutter-b">
<div class="card-header">
    <div class="card-title">
        <h3 class="card-label">لیست واریزی  ها</h3>
    </div>
</div>
<div class="card-body">
    @if (Model.Message != null)
    {
        switch (Model.Code)
        {
            case "Error":
                <div class="alert alert-danger"> @Model.Message </div>
                break;
            case "Warning":
                <div class="alert alert-warning"> @Model.Message </div>
                break;
            case "Info":
                <div class="alert alert-info"> @Model.Message </div>
                break;
            default:
                <div class="alert alert-success"> @Model.Message </div>
                break;
        }

        Model.Message = null;
        Model.Code = null;
    }
    <div class="example mb-10">
        <p>
            <a asp-page="Create" class="label label-inline label-light-primary font-weight-bold">ایجاد تامین کننده جدید</a>
        </p>
        <form asp-page="/Suppliers/Index" method="get">
            <div class="form-actions no-color">
                <p>
                    جستجو بر اساس نام:
                    <input type="text" name="search" value="@Model.Transactions.PaginationDetails.Search" />
                    <input type="text" hidden="hidden" name="pageIndex" value="1" />
                    <input type="submit" value="بجو" class="btn btn-primary" /> |
                    تعداد رکورد ها در صفحه :
                    <a asp-page="/Suppliers/Index" asp-route-pageSize="10">10</a> -
                    <a asp-page="/Suppliers/Index" asp-route-pageSize="20">20</a> -
                    <a asp-page="/Suppliers/Index" asp-route-pageSize="30">30</a> -
                    <a asp-page="/Suppliers/Index" asp-route-pageSize="40">40</a> -
                    <a asp-page="/Suppliers/Index" asp-route-pageSize="50">50</a>
                </p>
            </div>
        </form>
        <div class="example-preview">
            <table class="table table-bordered mb-6">
                <thead>
                    <tr class="fw-bolder text-muted">
                        <th class="w-25px">
                            #
                        </th>
                        <th class="min-w-150px">تاریخ تراکنش</th>
                        <th class="min-w-140px">نام کاربری</th>
                        <th class="min-w-120px">پرداخت شده</th>
                        <th class="min-w-120px">کد رهگیری</th>
                        <th class="min-w-120px">شناسه پرداخت</th>
                        <th class="min-w-120px">شماره سند</th>
                        <th class="min-w-100px text-end">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model.Transactions.ReturnData)
                    {
                        <tr>
                            <th scope="row">@(i++)</th>
                            <td>@supplier.TransactionDate</td>
                            <td>@supplier.User?.UserName</td>
                            <td>@supplier.Amount</td>
                            <td>@supplier.RefId</td>
                            <td>@supplier.PaymentId</td>
                            <td>@supplier.SanadCodeCustomer</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@supplier.Id" class="label label-inline label-light-success font-weight-bold">ویرایش</a>
                                <a asp-page="Delete" asp-route-id="@supplier.Id" class="label label-inline label-light-danger font-weight-bold">حذف</a>
                                <a asp-page="Detail" asp-route-id="@supplier.Id" class="label label-inline label-light-warning font-weight-bold">جزئیات</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Pagination" model="@Model.Transactions.PaginationDetails" />


        </div>

    </div>
    <!--end::نمونه-->
</div>