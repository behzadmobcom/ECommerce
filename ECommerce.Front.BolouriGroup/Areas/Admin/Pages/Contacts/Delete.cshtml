@page
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.Contacts.DeleteModel
@{
}

@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        حذف محصولات
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" name="id" asp-for="@Model.Contact.Id" />
                    <div class="card-body">

                        <div class="form-group">
                            <label>نام فرستنده</label>
                            <label class="form-control form-control-solid">@Model.Contact.Name</label>
                        </div>
                        <div class="form-group">
                            <label>ایمیل فرستنده</label>
                            <label class="form-control form-control-solid">@Model.Contact.Email</label>
                        </div>
                        <div class="form-group">
                            <label>موضوع پیام</label>
                            <label class="form-control form-control-solid">@Model.Contact.Subject</label>
                        </div>
                        <div class="form-group">
                            <label>متن پیام</label>
                            <label class="form-control form-control-solid" style="overflow-y: scroll; height: 100px;">
                                @Html.Raw(Model.Contact.Message)
                            </label>
                        </div>
                        <div class="form-group">
                            <label>متن پاسخ</label>
                            <label class="form-control form-control-solid" style="overflow-y: scroll; height: 100px;">
                                @Html.Raw(Model.Contact.ReplayMessage)
                            </label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">حذف</button>
                        <a class="btn btn-secondary" asp-Page="/Contacts/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>