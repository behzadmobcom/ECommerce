@page "/Admin/EditBlogCategory/{handler?}"
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.BlogCategories.EditModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        ویرایش دسته بندی
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" asp-for="@Model.BlogCategory.Id"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام</label>
                            <input asp-for="@Model.BlogCategory.Name" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.BlogCategory.Name" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>عمق</label>
                            <input asp-for="@Model.BlogCategory.Depth" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.BlogCategory.Depth" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="@Model.BlogCategory.CreatedDate" type="datetime" hidden="hidden" />
                            <input asp-for="@Model.BlogCategory.CreatorUserId" type="number" hidden="hidden" />                            
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">ویرایش</button>
                        <a class="btn btn-secondary" asp-Page="/BlogCategories/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>