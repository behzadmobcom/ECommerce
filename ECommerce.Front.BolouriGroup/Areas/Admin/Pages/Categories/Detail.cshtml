@page
@model ECommerce.Front.BolouriGroup.Areas.Admin.Pages.Categories.DetailModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        جزئیات دسنه بندی
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام:</label>
                            <label class="form-control form-control-solid">@Model.Category.Name</label>
                        </div>
                        <div class="form-group">
                            <label>مسیر:</label>
                            <label class="form-control form-control-solid">@Model.Category.Path</label>
                        </div>
                        <div class="form-group">
                            <label>فعال بودن:</label>
                            <label class="form-control form-control-solid">@Model.Category.IsActive</label>
                        </div>
                        <div class="form-group">
                            <label>ترتیب نمایش در منو:</label>
                            <label class="form-control form-control-solid">@Model.Category.DisplayOrder</label>
                        </div>
                        <div class="form-group">
                            <label>انتخاب منوی پدر:</label>
                            <label class="form-control form-control-solid">@Model.Category.Path</label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary mr-2" asp-Page="/Categories/edit" asp-area="Admin" asp-route-id="@Model.Category.Id">ویرایش</a>
                        <a class="btn btn-secondary" asp-Page="/Categories/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>