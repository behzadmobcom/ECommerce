@page
@model ArshaHamrah.Areas.Admin.Pages.Categories.IndexModel
@{
    var i = 1;
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">لیست دسنه بندی ها</h3>
        </div>
    </div>
    <div class="card-body">
        <!--begin::نمونه-->
        @if (Model.Message != null)
        {
            switch (Model.Code)
            {
                case "Error":
                    <div class="alert alert-danger"> @Model.Message </div>
                    break;
                case "Warning":
                    <div class="alert alert-warning"> @Model.Message </div>
                    break;
                case "Info":
                    <div class="alert alert-info"> @Model.Message </div>
                    break;
                default:
                    <div class="alert alert-success"> @Model.Message </div>
                    break;
            }

            Model.Message = null;
            Model.Code = null;
        }
        <div class="example mb-10">
            <p>
                <a asp-page="Create" class="label label-inline label-light-primary font-weight-bold">ایجاد دسنه بندی جدید</a>
            </p>
            <div class="example-preview">
                <table class="table table-bordered mb-6">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">نام</th>
                            <th scope="col">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <th scope="row">@(i++)</th>
                                <td>@category.Name</td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@category.Id" class="label label-inline label-light-success font-weight-bold">ویرایش</a>
                                    <a asp-page="Delete" asp-route-id="@category.Id" class="label label-inline label-light-danger font-weight-bold">حذف</a>
                                    <a asp-page="Detail" asp-route-id="@category.Id" class="label label-inline label-light-warning font-weight-bold">جزئیات</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>