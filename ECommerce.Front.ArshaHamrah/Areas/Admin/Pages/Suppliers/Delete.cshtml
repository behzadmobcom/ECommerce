@page "/Admin/DeleteSupplier"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ArshaHamrah.Areas.Admin.Pages.Suppliers.DeleteModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        حذف تامین کننده
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" name="id" asp-for="@Model.Supplier.Id"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.Name</label>
                        </div>
                        <div class="form-group">
                            <label>توضیحات:</label>
                            <label class="form-control form-control-solid">@Html.Raw(Model.Supplier.Description)</label>
                        </div>
                        <div class="form-group">
                            <label>موبایل:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.Mobile</label>
                        </div>
                        <div class="form-group">
                            <label>تلفن:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.Tell</label>
                        </div>
                        <div class="form-group">
                            <label>آدرس:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.Address</label>
                        </div>
                        <div class="form-group">
                            <label>آدرس وب سایت:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.Website</label>
                        </div>
                        <div class="form-group">
                            <label>ایمیل:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.Email</label>
                        </div>
                        <div class="form-group">
                            <label>نام رابط:</label>
                            <label class="form-control form-control-solid">@Model.Supplier.ConnectionName</label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">حذف</button>
                        <a class="btn btn-secondary" asp-Page="/Suppliers/index" asp-area="Admin">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>