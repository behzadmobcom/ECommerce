@page
@model ECommerce.Front.Admin.Pages.Users.EditModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        ویرایش کاربر
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" asp-for="@Model.User.Id"/>
                    <input hidden="hidden" asp-for="@Model.User.SecurityStamp"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام کاربری</label>
                            <input asp-for="@Model.User.UserName" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.UserName" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>نام</label>
                            <input asp-for="@Model.User.FirstName" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.FirstName" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                           <div class="form-group">
                            <label>نام خانوادگی</label>
                            <input asp-for="@Model.User.LastName" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.LastName" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>شناسه ملی</label>
                            <input asp-for="@Model.User.NationalCode" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.NationalCode" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>ایمیل</label>
                            <input asp-for="@Model.User.Email" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.Email" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>شماره موبایل</label>
                            <input asp-for="@Model.User.Mobile" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.Mobile" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>                  
                        <div class="form-group">
                            <label>شماره تلفن</label>
                            <input asp-for="@Model.User.PhoneNumber" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.PhoneNumber" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>وضعیت</label>
                            <input asp-for="@Model.User.State" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.State" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>فعال</label>
                            <input asp-for="@Model.User.IsActive" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.User.IsActive" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">ویرایش</button>
                        <a class="btn btn-secondary" asp-Page="/Users/index">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>