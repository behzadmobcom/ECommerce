@page
@model ECommerce.Front.Admin.Pages.PaymentMethods.DeleteModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        حذف روش های پرداخت
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <input hidden="hidden" name="id" asp-for="@Model.PaymentMethod.Id"/>
                    <div class="card-body">
                        <div class="form-group">
                            <label>شماره حساب:</label>
                            <label class="form-control form-control-solid">@Model.PaymentMethod.AccountNumber</label>
                        </div>
                        <div class="form-group">
                            <label>نام بانک:</label>
                            <label class="form-control form-control-solid">@Model.PaymentMethod.BankName</label>
                        </div>
                        <div class="form-group">
                            <label>نام شعبه:</label>
                            <label class="form-control form-control-solid">@Model.PaymentMethod.BrunchName</label>
                        </div>
                        <div class="form-group">
                            <label>کد بانک:</label>
                            <label class="form-control form-control-solid">@Model.PaymentMethod.BankCode</label>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">حذف</button>
                        <a class="btn btn-secondary" asp-Page="/PaymentMethods/index">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>