@page
@using Ecommerce.Entities
@model ECommerce.Front.Admin.Pages.ProductAttributes.CreateModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        ایجاد خصوصیات جدید
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>انتخاب دسته بندی خصوصیات</label>
                            <select asp-for="@Model.ProductAttribute.AttributeGroupId" asp-items="@Model.AttributeGroup" class="col-md-12 js-example-basic-multiple  form-control"></select>
                        </div>
                        <div class="form-group">
                            <label>عنوان</label>
                            <input asp-for="@Model.ProductAttribute.Title" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.ProductAttribute.Title" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">

                            <select asp-for="@Model.ProductAttribute.AttributeType" asp-items="Html.GetEnumSelectList<AttributeType>()" class="col-md-12 js-example-basic-multiple  form-control">
                                <option selected="selected" value="">لطفا نوع فیلد را انتخاب کنید</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">ثبت</button>
                        <a class="btn btn-secondary" asp-Page="/ProductAttributes/index">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>