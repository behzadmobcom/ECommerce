@page
@model ECommerce.Front.Admin.Pages.Suppliers.CreateModel
@{
}
@if (Model.Message != null)
{
    switch (Model.Code)
    {
        case "Error":
            <div class="alert alert-danger"> @Model.Message </div>
            break;
        case "Warning":
            <div class="alert alert-warning"> @Model.Message </div>
            break;
        case "Info":
            <div class="alert alert-info"> @Model.Message </div>
            break;
        default:
            <div class="alert alert-success"> @Model.Message </div>
            break;
    }

    Model.Message = null;
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xxl-12 order-1 order-xxl-2 ">
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="card-title">
                        ایجاد تامین کننده جدید
                    </h3>
                </div>
                <!--begin::Form-->
                <form class="form" method="post" asp-page-handler="OnPost">
                    <div class="card-body">
                        <div class="form-group">
                            <label>نام</label>
                            <input asp-for="@Model.Supplier.Name" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.Name" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>توضیحات</label>
                            <textarea asp-for="@Model.Supplier.Description" id="Description_Add" class="form-control form-control-solid"></textarea>
                        </div>
                        <div class="form-group">
                            <label>موبایل</label>
                            <input asp-for="@Model.Supplier.Mobile" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.Mobile" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>تلفن</label>
                            <input asp-for="@Model.Supplier.Tell" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.Tell" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>آدرس</label>
                            <input asp-for="@Model.Supplier.Address" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.Address" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>آدرس وب سایت</label>
                            <input asp-for="@Model.Supplier.Website" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.Website" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>ایمیل</label>
                            <input asp-for="@Model.Supplier.Email" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.Email" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                        <div class="form-group">
                            <label>نام رابط</label>
                            <input asp-for="@Model.Supplier.ConnectionName" class="form-control form-control-solid"/>
                            <span asp-validation-for="@Model.Supplier.ConnectionName" class="mt-5" style="color: red; margin-top: 10px"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary mr-2">ثبت</button>
                        <a class="btn btn-secondary" asp-Page="/Suppliers/index">لغو</a>
                    </div>
                </form>
                <!--end::Form-->
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<script src="~/Admin/js/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        window.onload = function() {
            CKEDITOR.replace('Description_Add');
        };
    </script>
}